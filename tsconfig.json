{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES2016"
    ],
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": [
    "./setupTests.ts",
    "./src/*",
    "./tests/**/*"
  ]
}
